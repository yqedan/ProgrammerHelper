<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yusufqedan.programmerhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionBarTheme" />
        <activity
            android:name=".ui.CreateAccountActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.FlashcardCategoriesActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.TriviaCategoriesActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ToDoActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.FlashcardsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.FlashcardCategoriesActivity" />
        </activity>
        <activity
            android:name=".ui.TriviaActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.TriviaCategoriesActivity" />
        </activity>
        <activity
            android:name=".ui.NewTopicActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.FlashcardCategoriesActivity" />
        </activity>
        <activity
            android:name=".ui.NewFlashcardActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.FlashcardCategoriesActivity" />
        </activity>
        <activity android:name=".ui.ChangePasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yusufqedan.programmerhelper.ui.MainActivity" />
        </activity>
    </application>

</manifest>