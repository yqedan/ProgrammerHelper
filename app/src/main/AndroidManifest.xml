<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yusuf.programmerhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppNoActionBarTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CreateAccountActivity"
            android:theme="@style/AppNoActionBarTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.FlashcardCategoriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.FlashcardsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.TriviaCategoriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.TriviaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ToDoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.NewTopicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.NewFlashcardActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>