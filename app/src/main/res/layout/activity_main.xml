<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yusuf.programmerhelper.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Welcome Programmer Helper. Please select an option below."
        android:background="@color/primary_light"
        android:padding="10dp" />

    <Button
        android:text="Multiple Choice Game"
        android:id="@+id/quiz"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/primary_text"
        android:background="@color/colorPrimary" />

    <Button
        android:text="To do list"
        android:id="@+id/todo"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/flashcards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/primary_text"
        android:background="@color/colorPrimary" />

    <Button
        android:text="Flashcards"
        android:id="@+id/flashcards"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/primary_text"
        android:background="@color/colorPrimary" />

</RelativeLayout>
