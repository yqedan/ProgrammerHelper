<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_flashcards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yusufqedan.programmerhelper.ui.FlashcardsActivity">

    <TextView
        android:id="@+id/no_flashcards_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are no flashcards please add some before you begin playing!" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Start"
        android:textColor="@color/primary_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add_flashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Add Flashcard"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/qanda"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="Question"
        android:textSize="25dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/flashcard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="10dp"
        android:text="Why is a manhole cover round?"
        android:visibility="invisible" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Previous"
        android:textColor="@color/primary_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/deleteTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Delete topic"
        android:textColor="@color/primary_text" />
</LinearLayout>
